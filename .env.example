# Database Configuration (matches docker-compose.yml defaults)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soc_iot_db
DB_USER=soc_toolkit
DB_PASSWORD=soc_toolkit_pass

# Application Settings
LOG_LEVEL=INFO
SCAN_TIMEOUT=300
MAX_CONCURRENT_SCANS=3

# Nmap Settings
NMAP_PATH=/usr/bin/nmap
NMAP_ARGUMENTS=-sS -sV -O -T4

# UI Settings
STREAMLIT_PORT=8501
